<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">

       </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="edtInputText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:paddingLeft">@dimen/size_4</item>
        <item name="android:inputType">text|number</item>
        <item name="android:ems">@dimen/size_10</item>
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>


    <style name="txtViewNormal">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginLeft">@dimen/size_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
